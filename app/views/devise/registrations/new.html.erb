<div data-sticky-container>
  <div class="sticky rails-menu row" data-sticky data-options="anchor: page; marginTop: 0; stickyOn: small;">
    <nav class="top-bar">
      <div class="top-bar-left">
        <ul class="menu">
          <li class="menu-text">
            <span style="font: 400 2.0em/100% 'Italianno', Helvetica, Sans-serif;">
              <%= link_to "Kaiwa", root_path %>
            </span>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</div>

<div class="form-box">
  <h2>Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field row">
      <%= f.text_field :username, autofocus: true, placeholder: "username" %>
      <%= f.email_field :email, placeholder: "email address"%>
      <%= f.password_field :password, autocomplete: "off", placeholder: "password"%>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up" %>
    </div>

    <br/>

    <div class="bumper">
      <br/>
      <strong><%= render "devise/shared/links" %></strong>
    </div>
  <% end %>
</div>
